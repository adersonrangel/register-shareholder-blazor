@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Routing
@rendermode InteractiveServer

<nav class="bg-white shadow-lg">
    <div class="max-w-6xl mx-auto px-4">
        <div class="flex justify-between">
            <div class="flex space-x-7">
                <div>
                    <NavLink class="flex items-center py-4 px-2" href="">
                        <span class="font-semibold text-gray-500 text-lg">Register Shareholder</span>
                    </NavLink>
                </div>
            </div>

            <!-- Mobile menu button -->
            <div class="md:hidden flex items-center">
                <button type="button" class="outline-none mobile-menu-button" @onclick="ToggleMenu">
                    <svg class="w-6 h-6 text-gray-500 hover:text-blue-600"
                         fill="none"
                         stroke-linecap="round"
                         stroke-linejoin="round"
                         stroke-width="2"
                         viewBox="0 0 24 24"
                         stroke="currentColor">
                        <path d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>
            </div>

            <!-- Primary Nav -->
            <div class="hidden md:flex items-center space-x-1">
                <NavLink class="py-4 px-2 text-gray-500 hover:text-blue-600 transition duration-300" 
                         href="/" Match="NavLinkMatch.All">
                    Home
                </NavLink>
                <NavLink class="py-4 px-2 text-gray-500 hover:text-blue-600 transition duration-300" 
                         href="List">
                    List
                </NavLink>
                <NavLink class="py-4 px-2 text-gray-500 hover:text-blue-600 transition duration-300" 
                         href="about">
                    About
                </NavLink>
            </div>
        </div>
    </div>

    <!-- Mobile Menu -->
    <div class="@(_isOpen ? "block" : "hidden") md:hidden">
        <NavLink class="block py-2 px-4 text-sm hover:bg-gray-200" href="/" Match="NavLinkMatch.All">
            Home
        </NavLink>
        <NavLink class="block py-2 px-4 text-sm hover:bg-gray-200" href="List">
            List
        </NavLink>
        <NavLink class="block py-2 px-4 text-sm hover:bg-gray-200" href="about">
            About
        </NavLink>
    </div>
</nav>

@code {
    private bool _isOpen = false;

  

    public void ToggleMenu()
    {
        _isOpen = !_isOpen;
       
    }
}

